{
  "name": "@living-architecture/docs",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "dependsOn": [
          "validate-cli-refs"
        ],
        "outputs": [
          "{projectRoot}/.vitepress/dist"
        ],
        "options": {
          "commands": [
            "cp ../../packages/riviere-cli/docs/workflow/step-*.md extract/steps/",
            "cp ../../packages/riviere-cli/docs/generated/cli-reference.md reference/cli/cli-reference.md",
            "pnpm exec vitepress build"
          ],
          "cwd": "apps/docs",
          "parallel": false
        }
      },
      "serve": {
        "executor": "nx:run-commands",
        "continuous": true,
        "options": {
          "commands": [
            "cp ../../packages/riviere-cli/docs/workflow/step-*.md extract/steps/",
            "cp ../../packages/riviere-cli/docs/generated/cli-reference.md reference/cli/cli-reference.md",
            "pnpm exec vitepress dev"
          ],
          "cwd": "apps/docs",
          "parallel": false
        }
      },
      "preview": {
        "executor": "nx:run-commands",
        "dependsOn": [
          "build"
        ],
        "options": {
          "command": "pnpm exec vitepress preview",
          "cwd": "apps/docs"
        }
      },
      "validate-cli-refs": {
        "executor": "nx:run-commands",
        "options": {
          "command": "npx tsx scripts/validate-cli-refs.ts",
          "cwd": "apps/docs"
        }
      }
    }
  },
  "dependencies": {
    "vitepress": "^1.5.0"
  },
  "devDependencies": {
  }
}
